<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- Background when checked -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFFFF" /> <!-- Set the color for the circle when checked -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <!-- Border when checked -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <stroke android:color="#FFF4417E" android:width="2dp" /> <!-- Set the border color and width when checked -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <!-- Background when unchecked -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FBF3A8" /> <!-- Set the color for the circle when unchecked -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <!-- Border when unchecked -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <stroke android:color="#000000" android:width="2dp" /> <!-- Set the border color and width when unchecked -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
